<div id="cart-container">
<h1 id="carts-title">Оформление заказа</h1>

{{#if orderInCart}}
  <h3 id="carts-list">Список карт:</h3>
  <table class='card-sellers'>
    <tr>
      <th>Название</th>
      <th>Продавец</th>
      <th>Цена</th>
      <th>Состояние</th>
      <th>Фольгированная</th>
      <th>Город</th>
    </tr>
    {{#each orderInCart}}
      <tr>
        <td>
          {{this.Card.name}}
        </td>
        <td>
          {{this.User.fullName}}
        </td>
        <td>
          {{this.price}}
        </td>
        <td>
          {{this.quality}}
        </td>
        <td>
          {{this.isFoil}}
        </td>
        <td>
          {{this.User.city}}
        </td>
        <td><button id={{this.id}} class='removeBtn'>Удалить</button></td>
      </tr>
    {{/each}}
  </table>
  <input id='OrderBtn' type='submit' value='Оформить заказ' />
{{else}}
  <h1>Корзина пуста</h1>
{{/if}}
</div> 
