<div class='card-info'>
  <table class='card-sellers'>
    <tr>
      <th></th>
      <th>Название</th>
      <th>Продавец</th>
      <th>Цена</th>
      <th>Состояние</th>
      <th>Фольгированная</th>
      <th>Город</th>
      <th>Кол-во</th>
      <th>В корзину</th>
    </tr>
    {{#each fullProduct}}
      <tr>
        <td>
          <a class='card-name' href='/cards/{{this.Card.id}}'>
            <img class='card-name' src='{{this.Card.img}}' , style='width: 60px; height:100px;' />
          </a>
        </td>
        <td>
          <a class='card-name' href='/api/cards/{{this.CardId}}'>
            {{this.Card.name}}
          </a>
        </td>
        <td>
          {{this.User.login}}
        </td>
        <td>
          {{this.price}}
        </td>
        <td>
          {{this.quality}}
        </td>
        <td>
          {{this.isFoil}}
        </td>
        <td>
          {{this.User.city}}
        </td>
        <td>
          <input type='number' name='number' value={{this.number}} style='width: 60px;' />
        </td>
        <td>
          <button id={{this.id}} class='buyBtn' type='click'>Добавить в корзину</button>
        </td>
      </tr>
    {{/each}}
  </table>
</div>
