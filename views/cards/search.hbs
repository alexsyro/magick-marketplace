<div class='card-info'>
  <table class='card-sellers'>
    <tr>
      <th>Название</th>
      <th>Продавец</th>
      <th>Цена</th>
      <th>Состояние</th>
      <th>Фольгированная</th>
      <th>Город</th>
      <th>В корзину</th>
    </tr>
    {{#each fullProduct}}
      <tr>
        <td>
          <a class='card-name' href='/api/cards/{{this.CardId}}'>
            {{this.CardName}}
          </a>
        </td>
        <td>
          {{this.UserLogin}}
        </td>
        <td>
          {{this.price}}
        </td>
        <td>
          {{this.quality}}
        </td>
        <td>
          {{this.isFoil}}
        </td>
        <td>
          {{this.city}}
        </td>
        <td>
          <button id={{this.id}} class='buyBtn' type='click'>Добавить в корзину</button>
        </td>
      </tr>
    {{/each}}
  </table>
</div>
